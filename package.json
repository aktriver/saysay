{
  "name": "saysay",
  "version": "0.0.1",
  "description": "",
  "main": "build/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm/transpile-only dev.ts",
    "predev": "yarn clean",
    "start": "electron .",
    "build": "npm-run-all \"vite:* --mode production\"",
    "prebuild": "npm-run-all clean tsc",
    "vite:main": "vite build --config vite.config.main.ts",
    "vite:preload": "vite build --config vite.config.preload.ts",
    "vite:renderer": "vite build --config vite.config.renderer.ts",
    "tsc": "tsc --noEmit",
    "dist": "electron-builder build",
    "predist": "shx rm -rf dist",
    "clean": "shx rm -rf build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-store": "^8.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "^16.3.2",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@vitejs/plugin-react-refresh": "^1.3.5",
    "chalk": "^4.1.1",
    "chokidar": "^3.5.2",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "vite": "^2.4.2"
  }
}
