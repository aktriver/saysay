{
  "name": "saysay",
  "version": "0.0.1",
  "description": "",
  "main": "main.cjs",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "predev": "yarn clean",
    "dev": "node --loader ts-node/esm/transpile-only dev.ts",
    "prebuild": "yarn clean",
    "build": "npm-run-all build:*",
    "build:tsc": "tsc --noEmit",
    "build:esbuild": "esbuild --bundle --minify --platform=node --target=node14 --external:electron --format=cjs --out-extension:.js=.cjs --outdir=build/main src/main/index.ts src/main/preload.ts",
    "build:vite": "vite build",
    "predist": "shx rm -rf dist && yarn build",
    "dist": "electron-builder build",
    "clean": "shx rm -rf build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "electron-store": "^8.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/node": "^16.3.2",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@vitejs/plugin-react-refresh": "^1.3.5",
    "chalk": "^4.1.1",
    "chokidar": "^3.5.2",
    "electron": "^13.1.6",
    "electron-builder": "^22.11.7",
    "esbuild": "^0.12.15",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "vite": "^2.4.2"
  }
}
