{
  "name": "saysay",
  "version": "0.0.1",
  "description": "",
  "main": "build/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm/transpile-only dev.ts",
    "predev": "yarn clean",
    "start": "electron .",
    "build": "npm-run-all \"vite:* --mode production\"",
    "prebuild": "npm-run-all clean tsc",
    "vite:main": "vite build --config vite.config.main.ts",
    "vite:preload": "vite build --config vite.config.preload.ts",
    "vite:renderer": "vite build --config vite.config.renderer.ts",
    "tsc": "tsc --noEmit",
    "dist": "electron-builder build",
    "predist": "shx rm -rf dist",
    "clean": "shx rm -rf build",
    "prettier": "prettier . --ignore-path .gitignore",
    "eslint": "eslint . --ignore-path .gitignore",
    "lint": "yarn eslint && yarn prettier --check",
    "fix": "yarn eslint --fix && yarn prettier --write --list-different",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "aku11i",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css}": [
      "prettier --write"
    ],
    "*.{js,cjs,json,yml,md}": "prettier --write"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.7.1",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@rehooks/local-storage": "2.4.0",
    "electron-store": "^8.0.1",
    "framer-motion": "^5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.8",
    "@types/react": "^17.0.34",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "chalk": "^4.1.2",
    "chokidar": "^3.5.2",
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.27.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "shx": "^0.3.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.14"
  }
}
